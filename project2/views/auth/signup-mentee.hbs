<h2>Signup Mentee</h2>

<form action="/signup-mentee" method="post">

    <label for="name">Name</label>
    <input id="name" type="text" name="name" placeholder="Alice">
    <br><br>
    <label for="surname">Surname</label>
    <input id="surname" type="text" name="surname" placeholder="Paul">
    <br><br>
    <label for="username">Username</label>
    <input id="username" type="text" name="username" placeholder="Mentee">
    <br><br>
    <label for="password">Password</label>
    <input id="password" type="password" name="password" placeholder="Your password">
    <br><br>

    <button type="submit">Create account</button>

</form>

  {{#if message}}
  <div class="error-message">{{ message }}</div>
  {{/if}}
  <br><br>

  //linked in sign up
  <p> <a href=auth/linkedin>Login With linked</a> </p> <button>Create account</button>

      <p class="account-message">
        Do you already have an account?
        <a href="/login">Login</a>
      </p>
</form>